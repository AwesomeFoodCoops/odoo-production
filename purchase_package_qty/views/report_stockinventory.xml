<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_inventory"
              inherit_id="stock.report_inventory">
        <xpath
            expr="//div[hasclass('page')]/table[2]/thead/tr/th[5]"
            position="after">
            <th class="text-right"><strong>Package Qty</strong></th>
        </xpath>
        <xpath
            expr="//div[hasclass('page')]/table[2]/tbody/t/tr[2]/td[5]"
            position="after">
            <td class="text-right"><span t-field="line.package_qty"/></td>
        </xpath>
    </template>
</odoo>
