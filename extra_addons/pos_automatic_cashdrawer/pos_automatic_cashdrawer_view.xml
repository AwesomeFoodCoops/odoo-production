<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_pos_config_form" model="ir.ui.view">
            <field name="name">pos.automatic.cashdrawer.config.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <field name="iface_cashdrawer" position="after">
                    <field name="iface_automatic_cashdrawer"/>
                    <field name="iface_automatic_cashdrawer_ip_address"
                        attrs="{'invisible': [('iface_automatic_cashdrawer', '=', False)]}"/>
                    <field name="iface_automatic_cashdrawer_tcp_port"
                        attrs="{'invisible': [('iface_automatic_cashdrawer', '=', False)]}"/>
                    <field name="iface_automatic_cashdrawer_display_accept_button"
                        attrs="{'invisible': [('iface_automatic_cashdrawer', '=', False)]}"/>
                    <field name="iface_automatic_cashdrawer_screen_on_top"
                        attrs="{'invisible': [('iface_automatic_cashdrawer', '=', False)]}"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
