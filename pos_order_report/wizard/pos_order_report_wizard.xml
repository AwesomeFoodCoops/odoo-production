<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_pos_order_report_wizard" model="ir.ui.view">
        <field name="name">view.pos.order.report.wizard</field>
        <field name="model">pos.order.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Pos Order">
                <group>
                    <group>
                        <field name="vertical_axis_id"/>
                    </group>
                    <group>
                        <field name="horizontal_axis_id"/>
                    </group>
                </group>
                <group string="Measure">
                    <field name="measure_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="field_description"/>
                        </tree>
                    </field>
                </group>
                <group string="Filters">
                    <field name="domain" nolabel="1" widget="domain" options="{'model': 'report.pos.order', 'in_dialog': True}" />
                </group>
                <footer>
                    <button name="export_report" string="Export" type="object" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pos_order_report_wizard" model="ir.actions.act_window">
        <field name="name">Export Pos Order Report</field>
        <field name="res_model">pos.order.report.wizard</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_pos_order_report_wizard"/>
    </record>

    <menuitem
            id="open_pos_order_report_wizard"
            action="action_pos_order_report_wizard"
            name="Order report xlsx"
            parent="point_of_sale.menu_point_rep"
            sequence="1"
    />
</odoo>
