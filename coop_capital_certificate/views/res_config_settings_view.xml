<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="view_capital_certificate_config">
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
            ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@data-key='account']/div[@id='invoicing_settings']"
                position="after">
                <h2 groups="account.group_account_user">Capital Certificates</h2>
                <div groups="account.group_account_user"
                    class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="capital_certificate_header"/>
                            <div class="content-group">
                                <div class="row mt16 ml4">
                                    <field name="capital_certificate_header"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="signature"/>
                            <div class="content-group">
                                <div class="row mt16 ml4">
                                    <field name="signature"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
