<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="product_supplierinfo_tree_view">
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="purchase_package_qty.product_supplierinfo_tree_view_package"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position="before">
                <field name="categ_id"/>
            </xpath>
            <xpath expr="//field[@name='product_tmpl_id']" position="after">
                <field name="product_code"/>
                <field name="product_name"/>
                <field name="default_code"/>
            </xpath>
            <xpath expr="//field[@name='date_start']" position="replace"/>
            <xpath expr="//field[@name='date_end']" position="replace"/>
            <xpath expr="//field[@name='price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='base_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='min_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='price_policy']" position="after">
                <field name="price_taxes_excluded"/>
                <field name="price_taxes_included"/>
                <field name="taxes_id" widget="many2many_tags"/>
                <field name="supplier_taxes_id" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_supplierinfo_search" model="ir.ui.view">
        <field name="name">product.supplierinfo.search</field>
        <field name="model">product.supplierinfo</field>
        <field name="arch" type="xml">
            <search string="Supplierinfo">
                <field name="name" string="Supplier"/>
                <field name="categ_id" string="Category"/>
                <field name="product_tmpl_id" string="Product" filter_domain="['|', '|', '|', ('product_tmpl_id.name', 'ilike', self), ('default_code', 'ilike', self), ('product_name', 'ilike', self), ('product_code', 'ilike', self)]"/>
                <filter string="Product Active" name="is_product_active" domain="[('is_product_active','=',1)]"/>
                <separator orientation="vertical"/>
                <filter string="Product can be purchase" name="product_purchase_ok" domain="[('product_purchase_ok','=',1)]"/>
                <filter string="Indicative Package" name="indicative_package" domain="[('indicative_package','=', True)]"/>
                <filter string="not Indicative Package" name="not_indicative_package" domain="[('indicative_package','=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="grp_product" context="{'group_by':'product_tmpl_id'}"/>
                    <filter string="Supplier" name="grp_supplier" context="{'group_by': 'name'}"/>
                    <filter string="Category" name="grp_category" context="{'group_by':'categ_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="product.product_supplierinfo_type_action" model="ir.actions.act_window">
        <field name="name">Supplier Pricelist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.supplierinfo</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'visible_product_tmpl_id': False,
            'search_default_is_product_active': 1,
            'search_default_product_purchase_ok': 1
            }</field>
    </record>


</odoo>
