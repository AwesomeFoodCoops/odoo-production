<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']/div[3]/div" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="update_main_vendor_on_update_vendor_price"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="update_main_vendor_on_update_vendor_price" string="Update Vendors Prices"/>
                        <div class="text-muted">
                            The action "Update Vendors Prices" defines Vendor as Main Vendor of selected products.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
