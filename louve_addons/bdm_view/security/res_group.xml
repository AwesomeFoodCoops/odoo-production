<odoo>
    <record model="ir.module.category" id="module_bdm_management">
        <field name="name">BDM</field>
        <field name="description">Manage BDM views.</field>
        <field name="sequence">10</field>
    </record>

    <record model="res.groups" id="group_bdm_user">
        <field name="name">BDM Assistant</field>
        <field name="category_id" ref="module_bdm_management"/>
    </record>
    <record model="res.groups" id="group_bdm_saisie">
        <field name="name">BDM Saisie</field>
        <field name="category_id" ref="module_bdm_management"/>
        <field name="implied_ids" eval="[(4, ref('group_bdm_user'))]"/>
    </record>
    <record model="res.groups" id="group_bdm_manager">
        <field name="name">BDM Manager</field>
        <field name="category_id" ref="module_bdm_management"/>
        <field name="implied_ids" eval="[(4, ref('group_bdm_saisie'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
</odoo>
