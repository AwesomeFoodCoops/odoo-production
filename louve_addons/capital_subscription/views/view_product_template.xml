<odoo>

    <record model="ir.ui.view" id="view_product_template_form">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div groups="account.group_account_user">
                    <field name="is_capital_fundraising"/>
                    <label for="is_capital_fundraising"/>
                </div>
                <div groups="account.group_account_user">
                    <field name="is_part_A" attrs="{'invisible':[('is_capital_fundraising', '=', False)]}"/>
                    <label for="is_part_A" attrs="{'invisible':[('is_capital_fundraising', '=', False)]}"/>
                </div>
            </div>
        </field>
    </record>

</odoo>
