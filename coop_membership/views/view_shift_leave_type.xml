<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shift_leave_type_form_inherit" model="ir.ui.view">
        <field name="model">shift.leave.type</field>
        <field name="inherit_id" ref="coop_shift.view_shift_leave_type_form"/>
        <field name="arch" type="xml">
            <field name='require_stop_date' position="after">
                <field name="is_temp_leave"/>
                <field name="is_incapacity"/>
                <field name="is_non_defined"/>
                <field name="is_anticipated"/>
                <field name="anticipated_month" attrs="{'invisible': [('is_anticipated', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>
