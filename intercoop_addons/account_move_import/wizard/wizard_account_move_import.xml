<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="account_move_import_view_form" model="ir.ui.view">
      <field name="name">account.move.import.form</field>
      <field name="model">account.move.import</field>
      <field name="arch" type="xml">
        <form string="Account Moves Import">
          <group col="4">
            <field name="journal"/>
            <field name="file" filename="filename"/>
            <field name="filename" invisible="1"/>
          </group>
          <footer>
            <button class="btn btn-sm btn-primary"
                    name="start_import"
                    string="Import"
                    type="object"/>
            <button class="btn btn-sm btn-default"
                    special="cancel"
                    string="Cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="account_move_import_action" model="ir.actions.act_window">
      <field name="name">Account Moves</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.move.import</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="account_move_import_view_form"/>
      <field name="target">new</field>
    </record>

    <menuitem id="menu_import"
              name="Imports"
              parent="account.menu_finance"/>

    <menuitem action="account_move_import_action"
              id="menu_account_move_import_action"
              name="Account Moves"
              parent="menu_import"/>
  </data>
</openerp>
