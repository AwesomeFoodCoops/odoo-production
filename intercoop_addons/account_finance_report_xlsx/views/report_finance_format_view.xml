<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_report_finance_format_form" model="ir.ui.view">
            <field name="name">view.report.finance.format.form</field>
            <field name="model">report.finance.format</field>
            <field name="arch" type="xml">
                <form string="Report Finance Format" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <group string="Report Finance Format">
                        <label for="format_report_finance" string="Default Refort Finance Format"/>
                        <div name="report_format_config">
                            <div>
                                <field name="format_report_finance" class="oe_inline"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
