<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<template id="foodcoop_memberspace.statistics">
		<t t-call="website.layout">
            <div class="container">
                <div class="row" style="margin-top: 10px;">
                    <div class="col-md-4">
                        <p style="margin-left: 15px;font-weight: 600;">Coopérateurs</p>
                        <div class="text-center" style="border: 1px solid #b2b7bb;padding: 10px;">
                            <p t-esc="'{0:,.0f}'.format(num_of_members).replace(',', ' ')" />
                            <i class="material-icons" style="font-size: 3.5em">accessibility_new</i>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p style="margin-left: 15px;font-weight: 600;">Ventes cette année</p>
                        <div class="text-center" style="border: 1px solid #b2b7bb;padding: 10px;">
                            <p t-esc="'{0:,.0f}'.format(num_of_sales).replace(',', ' ')" />
                            <i class="material-icons" style="font-size: 3.5em">shopping_cart</i>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>

                <div class="row">
                    <p style="margin-top: 10px; margin-left: 30px;font-weight: 600;">Chiffre d’affaires à date</p>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center" style="border: 1px solid #b2b7bb;padding: 10px;">
                            <p t-esc="'{0:,.2f}'.format(turnover_year_wo_tax).replace(',', ' ')" />
                            <div style="display: inline-flex">
                                <div>
                                    <i class="material-icons"
                                        style="font-size: 3.5em; margin-right: 10px;
                                        margin-top: 6px;">euro_symbol</i>
                                </div>
                                <div style="margin-top: 22px;">
                                    <span style="">HT</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center" style="border: 1px solid #b2b7bb;padding: 10px;">
                            <p t-esc="'{0:,.2f}'.format(turnover_year_tax).replace(',', ' ')" />
                            <div style="display: inline-flex">
                                <div>
                                    <i class="material-icons"
                                        style="font-size: 3.5em; margin-right: 10px;
                                        margin-top: 6px;">euro_symbol</i>
                                </div>
                                <div style="margin-top: 22px;">
                                    <span style="">TTC</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>

                <div class="chart-container">
                    <canvas id="chart" class="chart-statistics"></canvas>
                </div>
            </div>
        </t>
    </template>
</openerp>