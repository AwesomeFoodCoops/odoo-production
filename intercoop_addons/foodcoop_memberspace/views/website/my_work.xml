    <template id="foodcoop_memberspace.classic_counter">
        <div class="row" style="padding: 10px;">
            <p style="font-size: 25px;font-weight: 600;margin-top: 30px;margin-bottom: 10px;">Compteur classique</p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Créé le</th>
                            <th>Créé par</th>
                            <th>Service</th>
                            <th>Description</th>
                            <th>Manuel</th>
