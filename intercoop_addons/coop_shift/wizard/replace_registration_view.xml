<odoo>
    <record id="view_replace_registration_wizard_form" model="ir.ui.view">
        <field name="model">replace.registration.wizard</field>
        <field name="arch" type="xml">
            <form string="Replace Member">
                <group>
                    <field name="registration_id" invisible="1"/>
                    <field name="shift_id"/>
                    <field name="shift_ticket_id"/>
                    <field name="date_begin"/>
                    <field name="date_end"/>
                    <field name="partner_id" string="Replaced Member"/>
                </group>
                <group>
                    <field name="new_partner_id"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </group>
                <footer>
                    <button name="replace_member" string="Replace Member" type="object" class="oe_highlight"/>
                    <label string="or" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
