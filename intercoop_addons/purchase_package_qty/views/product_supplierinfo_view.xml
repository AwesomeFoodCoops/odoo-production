<openerp>
    <data>
        <record id="product_supplierinfo_form_view_package" model="ir.ui.view">
            <field name="name">product.supplierinfo.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
            <field name="arch" type="xml">
                <label for="price" position="before">
                    <group col="6" colspan="4">
                        <field name="package_qty"/>
                        <field name="indicative_package"/>
                    </group>
                </label>
                <xpath expr="//field[@name='price']/.." position="replace">
                    <group col="6" colspan="4">
                        <field name="base_price"/>
                        <field name="price_policy" nolabel="1"/>
                    </group>
                    <field name="price" string="Price per unit" attrs="{'invisible':[('price_policy', '!=', 'package')]}"/>
                </xpath>
                <label for="price" position="replace"/>
            </field>
        </record>

        <record id="product_supplierinfo_tree_view_package" model="ir.ui.view">
            <field name="name">product.supplierinfo.tree.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view" />
            <field name="arch" type="xml">
                <field name="min_qty" position="after">
                        <field name="package_qty"/>
                        <field name="indicative_package"/>
                </field>
                <field name="price" position="before">
                    <field name="price"/>
                    <field name="base_price"/>
                    <field name="price_policy"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
