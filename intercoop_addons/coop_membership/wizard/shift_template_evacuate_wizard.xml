<odoo>

    <record model="ir.ui.view" id="view_shift_template_evacuate_wizard">
        <field name="model">shift.template.evacuate.wizard</field>
        <field name="arch" type="xml">
            <form string="Evacuate Shift Template">
                <sheet>
                    <group>
                        <field name="template_count" invisible="1"/>
                        <field name="template_ids" widget="many2many_tags"/>
                        <field name="date"/>
                        <field name="strategy"/>
                        <field name="target_template_id" attrs="{'required': [('strategy', '=', 'move to')], 'invisible': [('strategy', '!=', 'move to')]}"/>
                        <label for="interval" attrs="{'invisible': [('strategy', 'not in', ['create', 'create and move'])]}"/>
                        <div class="o_row" attrs="{'invisible': [('strategy', 'not in', ['create', 'create and move'])]}">
                            <field name="interval" attrs="{'required': [('strategy', 'in', ['create', 'create and move'])]}"/>
                            <field name="rrule_type" attrs="{'required': [('strategy', 'in', ['create', 'create and move'])]}"/>
                        </div>
                        <field name="quantity" attrs="{'required': [('strategy', 'in', ['create', 'create and move'])], 'invisible': [('strategy', 'not in', ['create', 'create and move'])]}"/>
                        <field name="offset" attrs="{'invisible': ['|', ('strategy', 'not in', ['create', 'create and move']), ('quantity', '&lt;', 2)]}"/>
                        <field name="validate_team_change" attrs="{'invisible': [('strategy', 'in', ['cancel'])]}"/>
                        <field name="mail_template_id" attrs="{'invisible': [('strategy', 'in', ['cancel'])]}"/>
                    </group>
                    <p class="text-muted" attrs="{'invisible': [('template_count', '&lt;', 2)]}">
                        After confirmation, the operation will be executed in the background, and it will take several minutes to finish.<br/>
                        You can check its progress in the Conector > Queue Jobs menu.
                    </p>
                </sheet>
                <footer>
                    <button string="Confirm" name="execute" type="object" class="btn-primary"/>
                    <button string="Cancel" name="cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_shift_template_evacuate_wizard" model="ir.actions.act_window">
        <field name="name">Evacuate Shift Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shift.template.evacuate.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="ir_value_shift_template_evacuate_wizard" model="ir.values">
        <field name="name">Evacuate Shift Templates</field>
        <field name="model_id" ref="coop_shift.model_shift_template"/>
        <field name="model">shift.template</field>
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.act_window,%d' % ref('action_shift_template_evacuate_wizard')"/>
    </record>

</odoo>
