<odoo>

    <record id="view_wizard_use_theoritical_price_form" model="ir.ui.view">
        <field name="model">wizard.use.theoritical.price</field>
        <field name="arch" type="xml">
            <form string="Use Theoritical Prices">
                <group>
                     <group>
                         <div class="oe_grey" colspan="4">
                            By clicking on 'apply' Button, you will changes the prices of all the selected products, using theoritical prices computed by coefficients system.
                         </div>
                     </group>
                </group>
                <footer>
                    <button string='Apply' name="apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
           </form>

        </field>
    </record>

</odoo>
