                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Heure</th>
                                <th>Coordinateurs</th>
                                <th style="text-align:center">Echange</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="shift_upcomming" t-foreach="shift_upcomming" t-as="shift">
