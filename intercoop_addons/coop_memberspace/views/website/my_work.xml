                                    <td><span t-esc="item.shift_id and item.shift_id.name_get()[0][1] or ''"/></td>
                                    <td><t t-esc="item.name" /></td>
                                    <td><t t-esc="item.point_qty" /></td>
                                    <td><t t-esc="item.sum_current_qty" /></td>
                                </tr>
