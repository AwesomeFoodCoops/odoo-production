<?xml version="1.0" encoding="utf-8"?>
<openerp><data noupdate="1">
    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'coop_memberspace'), ('name', '=', 'myprofile')]" />
        </function>
        <value eval="{'noupdate': False}" />
    </function>
	<template id="coop_memberspace.myprofile">
		<t t-call="website.layout">
            <t t-set="title">Espace membre | Profil</t>
            <div class="container my_profile">
                <!-- Your Identity -->
                <div>
                    <div class="box-info-times">
                        <div class="collapsed" data-toggle="collapse" data-target="#your_identify" aria-expanded="false">
                            <i class="material-icons">perm_contact_calendar</i>
                            <h3 style="margin-left: 45px;">Votre Identité</h3>
                        </div>
                    </div>
                    <div id="your_identify" class="collapse box-info-content" aria-expanded="true" >
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                <h4>Civilité :</h4>
                            </div>
                            <div class="col-xs-8 col-sm-8 col-md-8">
                                <p style="margin-top:10px;margin-bottom:10px;font-size:17px;" t-esc="user.partner_id and user.partner_id.get_partner_sex_website() or ''" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                <h4>Nom :</h4>
                            </div>
                            <div class="col-xs-8 col-sm-8 col-md-8">
                                <p style="margin-top:10px;margin-bottom:10px;font-size:17px;" t-esc="user.partner_id.name" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Your Phone Number -->
                <form method="post" action="/edit-phone">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div>
                        <div class="box-info-times">
                            <div class="collapsed" data-toggle="collapse" data-target="#your_phone_number" aria-expanded="false">
                                <i class="material-icons">contact_phone</i>
                                <h3 style="margin-left: 45px;">Vos numéros de téléphone</h3>
                            </div>
                        </div>
                        <div id="your_phone_number" class="collapse box-info-content" aria-expanded="true" >
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                    <h4>Numéro de mobile :</h4>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-8">
                                    <input style="margin-top:10px;margin-bottom:10px;font-size:17px;" class="pd-l-3 input-no-edit" name="mobile" t-att-value="user.partner_id.mobile" disabled="disabled" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                    <h4>Numéro de fixe :</h4>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-8">
                                    <input style="margin-top:10px;margin-bottom:10px;font-size:17px;" class="pd-l-3 input-no-edit" name="phone" t-att-value="user.partner_id.phone" disabled="disabled" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-8">
                                    <button type="button" class="btn btn-warning btn-edit-phone">Modifier</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <!-- Your Postal Address -->
                <div>
                    <div class="box-info-times">
                        <div class="collapsed" data-toggle="collapse" data-target="#your_postal_address" aria-expanded="false">
                            <i class="material-icons">contact_mail</i>
                            <h3 style="margin-left: 45px;">Votre adresse postale</h3>
                        </div>
                    </div>
                    <form class="edit-postal-address" method="post" action="/edit-address">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div id="your_postal_address" class="collapse box-info-content" aria-expanded="true" >
                            <div class="address-edit hide">
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                        <h4>Rue :</h4>
                                    </div>
                                    <div class="col-xs-8 col-sm-8 col-md-8">
                                        <input style="margin-top:10px;margin-bottom:10px;font-size:17px;" class="pd-l-3" name="street" t-att-value="user.partner_id.street" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                        <h4>Code postal :</h4>
                                    </div>
                                    <div class="col-xs-8 col-sm-8 col-md-8">
                                        <input style="margin-top:10px;margin-bottom:10px;font-size:17px;" class="pd-l-3" name="zip" t-att-value="user.partner_id.zip" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                        <h4>Ville :</h4>
                                    </div>
                                    <div class="col-xs-8 col-sm-8 col-md-8">
                                        <input style="margin-top:10px;margin-bottom:10px;font-size:17px;" class="pd-l-3" name="city" t-att-value="user.partner_id.city" />
                                    </div>
                                </div>
                            </div>
                            <div class="row address-no-edit">
                                <div class="col-xs-4 col-sm-4 col-md-4">
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-8">
                                    <span t-esc="user.partner_id.street" /> <br/>
                                    <span t-esc="user.partner_id.zip" />
                                    <span t-esc="user.partner_id.city" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4 col-sm-4 col-md-4">
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-8">
                                    <button type="button" class="btn btn-warning btn-edit-address">Modifier</button>
                                </div>
                            </div>
                            <!-- <div class="row text-center address-no-edit">
                                <span t-esc="user.partner_id.street" /> <br/>
                                <span t-esc="user.partner_id.zip" />
                                <span t-esc="user.partner_id.city" />
                            </div>
                            <div class="row text-center">
                                <button type="button" class="btn btn-warning btn-edit-address">Modifier</button>
                            </div> -->
                        </div>
                    </form>
                </div>

                <!-- Your Display Preferences -->
                <div>
                    <div class="box-info-times">
                        <div class="collapsed" data-toggle="collapse" data-target="#your_display_reference" aria-expanded="false">
                            <i class="material-icons">contacts</i>
                            <h3 style="margin-left: 45px;">Vos préférences</h3>
                        </div>
                    </div>
                    <div id="your_display_reference" class="collapse box-info-content" aria-expanded="true" >
                        <h4 style="margin-left: 15px;font-size: 25px;">Afficher à votre équipe</h4>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                <h4>Photo :</h4>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">
                                <img class="img-responsive" t-if="user.partner_id and user.partner_id.image" t-attf-src="data:image/*;base64,{{user.partner_id.image}}" />
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">
                                <label class="switch">
                                    <input type="checkbox" name="public_avatar" t-att-checked="user.partner_id.public_avatar" />
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                        <hr class="text-center" style="width: 72%"/>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                <h4>Mobile :</h4>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">
                                <p style="margin-top:10px;margin-bottom:10px;font-size:17px;" t-esc="user.partner_id.mobile" />
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">
                                <label class="switch">
                                    <input type="checkbox" name="public_mobile" t-att-checked="user.partner_id.public_mobile" />
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                <h4>Adresse email :</h4>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">
                                <p style="margin-top:10px;margin-bottom:10px;font-size:17px;" t-esc="user.partner_id.email" />
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">
                                <label class="switch">
                                    <input type="checkbox" name="public_email" t-att-checked="user.partner_id.public_email" />
                                    <span class="slider round"></span>
                                </label>
                            </div>
                        </div>
                        <h4 style="margin-left: 15px;font-size: 25px;">
                            Ticket par email
                        </h4>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 text-right">
                                <h4>Activer :</h4>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">

                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4">
                                <form class="edit-email-pos-receipt" method="post" action="/edit-email-pos-receipt">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <label class="switch">
                                        <input type="checkbox" name="email_pos_receipt" t-att-checked="user.partner_id.email_pos_receipt" onchange="this.form.submit();"/>
                                        <span class="slider round"></span>
                                    </label>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</data></openerp>
