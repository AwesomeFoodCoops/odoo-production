<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<template id="coop_memberspace.myteam">
		<t t-call="website.layout">
            <t t-set="title">Espace membre | Mon équipe</t>
            <div class="container">
                <div class="row" style="padding-left: 15px;padding-right:15px;margin-top: 30px">
                    <h3>Mes coordinateurs 
                        <button type="button" style="margin-left: 5px;background-color: transparent;border: 0px;" class="material-icons js-copy" data-toggle="tooltip"
                            t-attf-title="Vous pouvez contacter L’ENSEMBLE de vos coordinateurs en écrivant à #{alias_leader} (cliquez pour copier l’adresse)."
                            t-att-data-copy="alias_leader" >
                            email
                        </button>
                    </h3>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <col width="40%" />
                            <col width="20%" />
                            <col width="20%" />
                            <col width="20%" />
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Courriel</th>
                                    <th>Mobile</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="coordinators" t-foreach="coordinators" t-as="coordinator">
                                    <tr>
                                        <td class="td-v-mid" scope="row"><span t-esc="coordinator.name" /></td>
                                        <td class="td-v-mid"><t t-if="coordinator.public_email"><span t-esc="coordinator.email" /></t></td>
                                        <td class="td-v-mid"><t t-if="coordinator.public_mobile"><span t-esc="coordinator.mobile" /></t></td>
                                        <td class="text-right">
                                            <t t-if="coordinator.image and coordinator.public_avatar"><img class="img-responsive img-table-profile" t-attf-src="data:image/*;base64,{{coordinator.image}}" /></t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="row" style="padding-left: 15px;padding-right:15px;margin-top: 30px">
                    <h3>Mon équipe 
                        <button type="button" style="margin-left: 5px;background-color: transparent;border: 0px;" class="material-icons js-copy" data-toggle="tooltip"
                            t-attf-title="Vous pouvez contacter L’ENSEMBLE de vos coordinateurs en écrivant à #{alias_team} (cliquez pour copier l’adresse)."
                            t-att-data-copy="alias_team"
                            t-if="is_leader and members" >
                            email
                        </button>
                    </h3>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <col width="40%" />
                            <col width="20%" />
                            <col width="20%" />
                            <col width="20%" />
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Courriel</th>
                                    <th>Mobile</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="members" t-as="member">
                                    <tr>
                                        <td class="td-v-mid" scope="row"><span t-esc="member.name" /></td>
                                        <td class="td-v-mid"><t t-if="member.public_email"><span t-esc="member.email" /></t></td>
                                        <td class="td-v-mid"><t t-if="member.public_mobile"><span t-esc="member.mobile" /></t></td>
                                        <td class="text-right">
                                            <t t-if="member.image and member.public_avatar"><img class="img-responsive img-table-profile" t-attf-src="data:image/*;base64,{{member.image}}" /></t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>
</openerp>