<?xml version="1.0" encoding="utf-8"?>
<openerp><data noupdate="1">
	<template id="coop_memberspace.myteam">
		<t t-call="website.layout">
            <t t-set="title">Espace membre | Mon équipe</t>
            <div class="container">
                <div class="row" style="padding-left: 15px;padding-right:15px;margin-top: 30px">
                    <h3>Mes coordinateurs 
                        <button type="button" style="margin-left: 5px;background-color: transparent;border: 0px;" class="material-icons js-copy" data-toggle="tooltip"
                            t-attf-title="Vous pouvez contacter L’ENSEMBLE de vos coordinateurs en écrivant à #{alias_leader} (cliquez pour copier l’adresse)."
                            t-att-data-copy="alias_leader"
                            data-container="body" >
                            email
                        </button>
                    </h3>
                    <div class="row">
                        <t t-if="coordinators" t-foreach="coordinators" t-as="coordinator">
                            <div class="col-sm-6 col-md-4 member_kanban">
                                <div class="member_kanban_content">
                                    <div class="member_image">
                                        <img t-if="coordinator.image and coordinator.public_avatar" t-attf-src="data:image/*;base64,{{coordinator.image}}" />
                                        <img t-if="not (coordinator.image and coordinator.public_avatar)" src="/base/static/src/img/avatar.png" />
                                    </div>
                                    <div class="member_detail">
                                        <h5  class="member_heading"><strong t-esc="coordinator.name" /></h5>
                                        <ul>
                                            <li><t t-if="coordinator.public_email"><t t-esc="coordinator.email" /></t></li>
                                            <li><t t-if="coordinator.public_mobile"><t t-esc="coordinator.mobile" /></t></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>

                <div t-if="current_member.shift_type == 'standard'" class="row" style="padding-left: 15px;padding-right:15px;margin-top: 30px">
                    <h3>Mon équipe 
                        <button type="button" style="margin-left: 5px;background-color: transparent;border: 0px;" class="material-icons js-copy" data-container="body" data-toggle="tooltip"
                            t-attf-title="Vous pouvez contacter L’ENSEMBLE de vos coordinateurs en écrivant à #{alias_team} (cliquez pour copier l’adresse)."
                            t-att-data-copy="alias_team"
                            t-if="is_leader and members" >
                            email
                        </button>
                    </h3>
                    <div class="row">
                        <t t-foreach="members" t-as="member">
                            <div class="col-sm-6 col-md-4 member_kanban">
                                <div class="member_kanban_content">
                                    <div class="member_image">
                                        <img t-if="member.image and member.public_avatar" t-attf-src="data:image/*;base64,{{member.image}}" />
                                        <img t-if="not (member.image and member.public_avatar)" src="/base/static/src/img/avatar.png" />
                                    </div>
                                    <div class="member_detail">
                                        <h5  class="member_heading"><strong t-esc="member.name" /></h5>
                                        <ul>
                                            <li><t t-if="member.public_email"><t t-esc="member.email" /></t></li>
                                            <li><t t-if="member.public_mobile"><t t-esc="member.mobile" /></t></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</data></openerp>
