<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_product_view_form" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Multiple Barcodes">
                    <field name="multi_barcode_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="product_id" invisible="1"/>
                            <field name="barcode"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Multiple Barcodes" groups="!product.group_product_variant">
                    <field name="multi_barcode_ids" nolabel="1" attrs="{'invisible': [('id', '=', False)]}">
                        <tree editable="bottom">
                            <field name="product_id" invisible="1"/>
                            <field name="barcode"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
