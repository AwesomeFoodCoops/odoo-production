<templates id="template" xml:space="preserve">

<t t-name="ProjectKanban.Category">
    <div class="o_kanban_project_panel_section">
        <t t-foreach="categories" t-as="category">
            <div class="o_kanban_project_panel_value list-group-item">
                <div class="o_kanban_project_panel_label_title"> <t t-esc="category.name"/> = </div>
                <div class="ml-2 block-color-act" t-att-data-id="category.id" t-att-data-categ-name="category.name" t-att-style="'cursor: pointer;width: 50px;height: 20px;background-color:' + category.color"/>
            </div>
        </t>
    </div>
</t>
</templates>
