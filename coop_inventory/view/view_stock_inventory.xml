<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_inventory_form" model="ir.ui.view">
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_qty'][1]" position="attributes">
                <attribute name="readonly" eval="True"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/kanban/field[@name='package_id']" position="attributes">
                <attribute name="groups">stock.group_tracking_lot</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree" position="attributes">
                <attribute name="decoration-danger">theoretical_qty != product_qty</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>
