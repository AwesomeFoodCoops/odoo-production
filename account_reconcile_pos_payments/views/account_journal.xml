<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <page name="bank_account" position="inside">
                <group string="Automatic POS Reconciliation" name="auto_reconciliation_pos">
                    <group>
                            <field name="cb_lines_domain" widget="domain" options="{'model': 'account.bank.statement.line', 'in_dialog': True}"/>
                            <field name="cb_delta_days"/>
                            <field name="cb_rounding"/>
                            <field name="cb_contactless_matching"/>
                            <field name="cb_contactless_lines_domain" widget="domain" options="{'model': 'account.bank.statement.line', 'in_dialog': True}" attrs="{'invisible': [('cb_contactless_matching','=',False)],'required': [('cb_contactless_matching','=',True)]}"/>
                            <field name="cb_contactless_delta_days" attrs="{'invisible': [('cb_contactless_matching','=',False)],'required': [('cb_contactless_matching','=',True)]}"/>
                        </group>
                        <group>
                            <field name="cb_child_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                </group>
                <group string="Automatic Charges Reconciliation" name="auto_reconciliation_expenses">
                    <group>
                        <field name="bank_expense_name_pattern"/>
                        <field name="bank_expense_ref_pattern"/>
                        <field name="bank_expense_note_pattern"/>
                    </group>
                    <group>
                        <field name="bank_expense_account_id"/>
                    </group>
                </group>
            </page>
        </field>
    </record>  
</odoo>
