<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_gross_margin_xlsx_wizard" model="ir.ui.view">
        <field name="name">view.gross.margin.xlsx.wizard</field>
        <field name="model">gross.margin.xlsx.wizard</field>
        <field name="arch" type="xml">
            <form string="Gross Margin">
                <group col="4">
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="category_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="export_report" string="Export" type="object" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_gross_margin_xlsx_wizard" model="ir.actions.act_window">
        <field name="name">Export Gross Margin Report</field>
        <field name="res_model">gross.margin.xlsx.wizard</field>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_gross_margin_xlsx_wizard"/>
    </record>

    <menuitem
            id="open_gross_margin_xlsx_wizard"
            action="action_gross_margin_xlsx_wizard"
            name="Gross Margin"
            parent="point_of_sale.menu_point_rep"
            sequence="20"
    />
</odoo>
