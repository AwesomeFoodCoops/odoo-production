<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_inventory_report_wizard_form" model="ir.ui.view">
        <field name="name">stock.inventory.recurrent.report.wizard.form</field>
        <field name="model">stock.inventory.recurrent.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="inventory_ids" context="{'tree_view_ref' : 'stock.view_inventory_tree'}"/>
                </group>
                <footer>
                    <button name="action_print" type="object" string="Print" class="oe_highlight"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_stock_inventory_report_wizard"
        name="Print Recurring Inventories"
        src_model="stock.inventory"
        res_model="stock.inventory.recurrent.report.wizard"
        view_mode="form"
        multi="True"
        target="new"
        key2="client_action_multi"/>
</odoo>
