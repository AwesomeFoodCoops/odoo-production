<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_category_group_form" model="ir.ui.view">
        <field name="name">stock.inventory.category.group.form</field>
        <field name="model">stock.inventory.category.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_ids"/>
                        <field name="line_ids">
                            <tree editable="top">
                                <field name="category_id"/>
                                <field name="copies"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    
    <record id="view_stock_category_group_tree" model="ir.ui.view">
        <field name="name">stock.inventory.category.group.tree</field>
        <field name="model">stock.inventory.category.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_stock_category_group" model="ir.actions.act_window">
        <field name="name">Category Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.inventory.category.group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        name="Category Groups"
        id="menu_stock_category_group"
        sequence="6"
        action="action_stock_category_group"
        parent="stock.menu_stock_config_settings"/>

</odoo>
