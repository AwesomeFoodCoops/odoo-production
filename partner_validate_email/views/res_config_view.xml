<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_base_config_settings_validate_mail" model="ir.ui.view">
        <field name="name">res.config.settings.validate.mail</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='multi_company']" position="after">
                <h2>Validate email address</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="validate_email"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="validate_email"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
