<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="minimal_layout_vegetables" name="report_coop_pricetag layout_vegetables"
        inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss"
                href="/coop_default_pricetag/static/src/scss/pricetag_vegetables.scss" />
        </xpath>
    </template>
    <template id="report_pricetag_vegetables">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="Products" t-as="product">
                    <t t-foreach="product['line'].quantity" t-as="q">
                        <div class="label_container_vege">
                            <div class="pricetag_vege">
                                <div class="label_top_vege">
                                    <div class="product_name_vege">
                                        <t t-esc="product['product'].name"/>
                                    </div>
                                </div>
                                <div class="label_left_vege">
                                    <div class="product_informations_vege">
                                        <div class="product_code">
                                            <t t-if="product['product'].code">
                                                <t t-esc="product['product'].code"/><br/>
                                            </t>
                                        </div>
                                        <t t-if="product['product'].weight"><t t-esc="product['product'].weight"/> kg --- <t t-esc="product['product'].price_weight"/> €/kg<br/></t>
                                        <t t-if="not(product['product'].weight) and product['product'].volume"><t t-esc="product['product'].volume"/>L --- <t t-esc="product['product'].price_volume"/> €/L<br/></t>
                                    </div>
                                </div>
                                <div class="label_right_vege">
                                    <div class="product_price_vege">
                                        <t t-esc="'%0.2f' % (product['product'].list_price)"/>€
                                    </div>
                                    <div class="product_price_uom_vege">
                                        /<t t-esc="product['product'].uom_id.name"/>
                                    </div>
                                </div>
                                <div class="label_bottom_vege">
                                    <div class="product_informations_vege">
                                        <div class="product_origin">
                                            <t name="pricetag_origine" t-if="product['product'].pricetag_origin">
                                                <t t-esc="product['product'].pricetag_origin"/><br/>
                                            </t>
                                        </div>
                                        <div class="pricetag_otherinfo">
                                            <t t-if="product['product'].pricetag_rackinfos"><t t-esc="product['product'].pricetag_rackinfos"/><br/></t>
                                            <t t-if="product['product'].pricetag_coopinfos"><t t-esc="product['product'].pricetag_coopinfos"/><br/></t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </div>
        </t>
    </template>
</odoo>
